{
  "name": "ENSALUD",
  "version": "1.0.0",
  "private": true,
  "main": "dist/main/main.js",
  "scripts": {
    "build:main": "tsc -p tsconfig.json",
    "dev:renderer": "vite --config vite.renderer.config.ts",
    "build:renderer": "vite build --config vite.renderer.config.ts",
    "start": "npm run build:main && electron .",
    "start:electron:dev": "cross-env NODE_ENV=development npm run build:main && electron .",
    "dev": "concurrently \"npm:dev:renderer\" \"npm:start:electron:dev\"",
    "build": "npm run build:renderer && npm run build:main"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "typescript": "^5.4.0",
    "vite": "^5.0.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3"
  }
}