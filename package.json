{
  "name": "ensalud-presupuestal",
  "private": true,
  "version": "1.0.0",
  "description": "ENSALUD Presupuestal - Electron + React + Vite + Node.js",
  "main": "dist/main/main.js",
  "type": "module",
  "scripts": {
    "dev:renderer": "vite --config vite.renderer.config.ts",
    "build:renderer": "vite build --config vite.renderer.config.ts",
    "build:main": "tsc -p tsconfig.main.json",
    "build": "npm run build:renderer && npm run build:main",
    "start:electron:dev": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron --no-sandbox dist/main/main.js",
    "dev": "npm run build:main && concurrently \"npm run dev:renderer\" \"npm run start:electron:dev\"",
    "start": "electron .",
    "migrate": "echo \"TODO: migrations\"",
    "seed": "echo \"TODO: seed\"",
    "test": "echo \"TODO: tests\""
  },
  "dependencies": {
    "decimal.js": "^10.4.3",
    "electron": "^30.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10"
  }
}
