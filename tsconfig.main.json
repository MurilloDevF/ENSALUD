{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Node",
    "outDir": "dist/main",
    "baseUrl": "src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/main/**/*",
    "src/types/**/*",
    "src/shared/**/*",
    "src/core/**/*",
    "src/db/**/*"
  ],
  "exclude": ["node_modules", "dist", "src/renderer"]
}
