{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Node",
    "outDir": "dist/main",
    "rootDir": "src/main",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true
  },
  "include": [
    "src/main/**/*",
    "src/types/**/*",
    "src/shared/**/*",
    "src/core/**/*",
    "src/db/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
